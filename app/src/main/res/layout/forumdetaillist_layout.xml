<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/ltdetail_llay0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ltdetail_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_yqlj">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ltdetail_llay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ltdetail_llay0"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/ltdetail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小黄瓜"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#898989"
            android:textSize="14sp" >
        </TextView>
        <TextView
            android:id="@+id/ltdetail_floorFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1楼"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#898989"
            android:textSize="14sp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ltdetail_llay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ltdetail_llay1"
        android:layout_toRightOf="@+id/ltdetail_llay0">
        <TextView
            android:id="@+id/ltdetail_replycontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="奖品是什么？？？？？？能不能提前透露点消息啊"
            android:textColor="#898989"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:lineSpacingExtra="3dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ltdetail_llay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ltdetail_llay2"
        android:layout_toRightOf="@+id/ltdetail_llay0">
        <TextView
            android:id="@+id/ltdetail_replytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2014-09-04 23:32"
            android:textColor="#898989"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
        </TextView>
    </LinearLayout>
</RelativeLayout>